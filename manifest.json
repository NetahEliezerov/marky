{
    "name": "Marky",
    "description": "Mark texts in webpages",
    "version": "2.1",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [{
        "js": ["modifySite.js"],
        "matches": ["*://*/*"]
    }],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Marky"
    }
}